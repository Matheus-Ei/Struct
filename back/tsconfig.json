{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
